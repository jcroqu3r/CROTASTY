/* ======================
   RESET
====================== */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Instrument Serif", serif;
  color: #9d5b0d;
}

/* ======================
   TEXTO GIGANTE DE FONDO
====================== */
.bg-text {
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
  font-family: "Instrument Serif", serif;
  font-size: 520px;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.04);
  white-space: nowrap;
  pointer-events: none;
  z-index: 0;
}

/* ======================
   HEADER
====================== */
.header {
  text-align: center;
  padding: 40px 0 25px;
}

/* navbar positioning context */
.nav {
  position: relative;
  z-index: 200;
}

.logo {
  width: 300px;
  margin-bottom: 35px;
}

/* Burger por defecto oculto en desktop (Bootstrap usa su propio toggler) */
.burger {
  display: none;
  position: relative;
  z-index: 50;
  background: none;
  border: none;
}

/* Ajustes para navbar Bootstrap para mantener estilo */
.navbar .navbar-nav .nav-link {
  text-decoration: none;
  font-family: "Instrument Serif", serif;
  font-size: 32px;
  letter-spacing: 2px;
  color: #c46a1b !important;
}

.navbar {
  background: transparent;
}

.navbar-toggler {
  border: none;
}

/* Hacer que el icono del toggler sea visible y oscuro */
.navbar-light .navbar-toggler-icon {
  background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(196,106,27,1)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
}

.menu,
.navbar-nav {
  list-style: none;
  display: flex;
  justify-content: center;
  gap: 60px;
  margin-bottom: 25px;
  margin: 0 auto;
  align-items: center;
}

.menu a,
.navbar-nav .nav-link {
  text-decoration: none;
  font-family: "Instrument Serif", serif;
  font-size: 32px;
  letter-spacing: 2px;
  color: #c46a1b;
}

/* Forzar centrado en desktop: Bootstrap a veces sobreescribe el layout */
@media (min-width: 992px) {
  .navbar .collapse.navbar-collapse {
    display: flex !important;
    justify-content: center !important;
  }
}

.linea {
  width: 70%;
  height: 1px;
  background-color: #ddd;
  margin: 0 auto;
}

/* ======================
   HERO
====================== */
.hero {
  position: relative;
  text-align: center;
  padding: 60px 40px 120px;
  overflow: hidden;
}

.hero h1,
.hero h3,
.hero p,
.hero button {
  position: relative;
  z-index: 1;
}

.hero h1 {
  font-family: "Instrument Serif", serif;
  font-size: 90px;
  font-weight: 400;
  color: #c46a1b;
}

.hero h3 {
  font-family: "Instrument Serif", serif;
  font-size: 36px;
  font-weight: 400;
  margin-top: 20px;
}

.hero p {
  max-width: 620px;
  font-family: "Work sans", serif;
  margin: 70px auto;
  font-size: 18px;
}

.hero button {
  padding: 18px 38px;
  background: #e5890a;
  color: #fff;
  border: none;
  cursor: pointer;
}

/* ======================
   BANNER
====================== */
.banner img {
  width: 100%;
  display: block;
}

/* ======================
   PLATOS DEL MES
====================== */
.platos {
  position: relative;
  padding: 160px 0 140px;
  text-align: center;
  overflow: hidden;
}

.platos h2 {
  font-family: "Instrument Serif", serif;
  font-size: 72px;
  font-weight: 400;
  color: #9d5b0d;
  margin-bottom: 20px;
  position: relative;
  z-index: 1;
}

.platos p {
  max-width: 520px;
  margin: 0 auto 80px;
  position: relative;
  z-index: 1;
}

.platos .bg-text {
  top: 54%;
}

/* ======================
   LISTA DE PLATOS
====================== */
.platos-lista {
  list-style: none;
  display: flex;
  justify-content: center;
  gap: 50px;
  position: relative;
  z-index: 1;
}

.platos-lista li {
  width: 420px;
  text-align: center;
}

.platos-lista img {
  width: 100%;
  border-radius: 18px;
  margin-bottom: 22px;
  display: block;
}

.platos-lista .destacado {
  margin-top: 40px;
}

.plato-titulo {
  display: block;
  font-family: "Instrument Serif", serif;
  font-size: 28px;
  margin-bottom: 6px;
}

.plato-subtitulo {
  display: block;
  font-size: 15px;
  margin-bottom: 14px;
}

.platos-lista li::after {
  content: "";
  display: block;
  width: 60px;
  height: 1px;
  background-color: #999;
  margin: 0 auto;
}

/* ======================
   BOTÓN VER MÁS
====================== */
.ver-mas {
  margin-top: 80px;
  padding: 14px 40px;
  border: 1px solid #000;
  background: transparent;
  cursor: pointer;
  position: relative;
  z-index: 1;
}

/* ======================
   BUSCADOR
====================== */
.buscador {
  text-align: center;
  padding: 80px 0;
}

.buscador input {
  padding: 12px 20px; 
  width: 260px;
  margin-right: 10px;
}

.buscador button {
  padding: 12px 26px;
}

/* ======================
   PÁGINA DE RECETAS
====================== */

.recetas {
  text-align: center;
}

/* TÍTULO DE LA PÁGINA (H1) */
.recetas > h1 {
  font-family: "Instrument Serif", serif;
  font-size: 120px;          /* MÁS GRANDE QUE TODO */
  font-weight: 400;
  color: #e5890a;
  margin: 60px 0 80px;    /* BIEN SEPARADO */
}

/* CADA RECETA */
.receta {
  margin-bottom: 80px;
}

/* NOMBRE DEL PLATO (H2) */
.receta h2 {
  font-family: "Instrument Serif", serif;
  font-size: 56px;          /* CLARAMENTE MENOR QUE H1 */
  font-weight: 400;
  color: #c46a1b;
  text-align: center;
  margin-bottom: 10px;    /* ESPACIO ANTES DE INGREDIENTES */
}


/* ======================
   CONTENIDO RECETA
====================== */
.receta-contenido {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
  gap: 100px;
}

/* Imagen */
.receta-imagen img {
  width: 640px;
  height: auto;
  display: block;
}

/* Ingredientes */
.receta-ingredientes {
    font-family: "Work sans", serif;
  text-align: right;
  font-size: 14px;
  line-height: 1.5;
  color: #333333;
}

.receta-ingredientes h4 {
  font-family: "Instrument Serif", serif;
  font-size: 24px;
  font-weight: 400;
  color: #c46a1b;
  margin-bottom: 12px;
}

.receta-ingredientes ul {
  list-style: none;
}

.receta-ingredientes li {
  margin-bottom: 4px;
}

/* Descripción */
.receta-descripcion {
    font-family: "Work sans", serif;
  text-align: left;
  font-size: 14px;
  line-height: 1.5;
  color: #333333;
  max-width: 260px;
}

.receta-descripcion h4 {
  font-family: "Instrument Serif", serif;
  font-size: 24px;
  font-weight: 400;
  color: #c46a1b;
  margin-bottom: 12px;
}

/* Separador */
.separador {
  width: 70%;
  height: 1px;
  background-color: #e0e0e0;
  margin: 40px auto 0;
}

/* ======================
   FOOTER
====================== */
footer {
  text-align: center;
  padding: 40px 0 60px;
  font-size: 20px;
  color: #999;
}

footer a {
  color: #c46a1b;
  text-decoration: none;
}

/* ======================
   PÁGINA DE TIPS
====================== */
.tips {
  position: relative;
  overflow: hidden;
}

.tips-hero {
  text-align: center;
  padding: 60px 40px 120px;
}

.tips-lista {
  width: 70%;
  max-width: 1000px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: 3rem;
}

.tip {
  display: grid;
  grid-template-columns: 60px 1fr 1fr 120px;
  align-items: start;
  gap: 1.5rem;
}

.tip-numero {
  font-size: 36px;
  font-weight: 400;
  color: #c46a1b;
  grid-column: 1;
}

.tip-titulo {
  grid-column: 2;
  font-size: 28px;
  font-weight: 400;
  color: #c46a1b;
}

.tip-titulo h2 {
  font-weight: 400;
}

.tip-contenido {
  grid-column: 3;
  font-size: 18px;
  color: #9d5b0d;
  text-align: left;
}

.tip-boton {
  grid-column: 4;
  display: flex;
  align-items: center;
}

.tip-boton button {
  font-size: 16px;
  padding: 8px 18px;
  background: none;
  border: 1px solid #c46a1b;
  color: #c46a1b;
  border-radius: 4px;
  cursor: pointer;
  transition: background 0.2s, color 0.2s;
}

.tip-boton button:hover {
  background: #c46a1b;
  color: #fff;
}

@media (max-width: 1024px) {
  .tips-lista {
    width: 85%;
    max-width: 95vw;
  }
  .tip {
    grid-template-columns: 40px 1fr 1fr 80px;
    gap: 1rem;
  }
}

@media (max-width: 700px) {
  .tips-lista {
    width: 98%;
    max-width: 100vw;
    padding: 0 2vw;
  }
  .tip {
    grid-template-columns: 1fr;
    grid-template-rows: auto auto auto auto;
    gap: 0.5rem;
    text-align: center;
  }
  .tip-numero,
  .tip-titulo,
  .tip-contenido,
  .tip-boton {
    grid-column: 1;
  }
  .tip-titulo {
    font-size: 22px;
  }
  .tip-contenido {
    font-size: 16px;
    text-align: center;
  }
  .tip-boton {
    justify-content: center;
  }
}

/* ======================
   RESPONSIVE
====================== */

/* Asegurar estilos específicos para tips-hero (evitar que otras reglas lo sobrescriban) */
main.tips .tips-hero h1 {
  font-family: "Instrument Serif", serif;
  font-size: 120px;
  font-weight: 400;
  color: #e5890a;
  text-align: center;
  margin: 60px 0 20px;
}

@media (max-width: 1024px) {
  main.tips .tips-hero h1 {
    font-size: 80px;
  }
}

@media (max-width: 600px) {
  main.tips .tips-hero h1 {
    font-size: 48px;
  }
}
@media (max-width: 1024px) {
  .receta-contenido {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .receta-ingredientes,
  .receta-descripcion {
    text-align: center;
    max-width: none;
  }

  .receta-imagen img {
    margin: 0 auto;
  }
}

@media (max-width: 900px) {
  .contacto-contenido {
    width: 95%;
    max-width: 100vw;
    grid-template-columns: 1fr;
    gap: 4rem;
  }
  .linea {
    width: 95%;
    max-width: 100vw;
  }
  .receta-contenido {
    grid-template-columns: 1fr;
    text-align: center;
  }
  .receta-ingredientes,
  .receta-descripcion {
    text-align: center;
    max-width: none;
  }
  .receta-imagen img {
    margin: 0 auto;
    width: 90vw;
    max-width: 350px;
  }
  .tips-lista {
    width: 70%;
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }
  .tip {
    display: grid;
    grid-template-columns: 60px 1fr 1fr 120px;
    align-items: start;
    gap: 1.5rem;
  }

  /* NAV - HAMBURGER (mobile) */
  .burger {
    display: flex;
    background: none;
    border: none;
    padding: 6px
    display: block;
    width: 100%;
    height: 3px;
    background: #c46a1b;
    border-radius: 2px;
    transition: transform .2s ease, opacity .2s ease;
  }

  .nav .menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    background: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    z-index: 300; /* más alto por seguridad */
  }

  .nav .menu.open {
    display: flex !important;
    flex-direction: column;
    align-items: center;
    opacity: 1 !important;
    visibility: visible !important;
    transform: translateX(-50%) translateY(0) !important;
    top: calc(100% + 6px) !important;
    min-width: 180px;
  }

  .nav .menu li {
    display: block;
    margin: 12px 0;
    text-align: center;
  }
} 

@media (max-width: 600px) {
  .contacto-contenido {
    width: 100%;
    padding: 0 5px;
    gap: 2rem;
  }
  .linea {
    width: 100%;
  }
  .recetas h1 {
    font-size: 28px;
  }
  .receta h2 {
    font-size: 22px;
  }
  .receta-imagen img {
    width: 95vw;
    max-width: 250px;
  }
  .tips-hero h1 {
    font-family: "Instrument Serif", serif;
    font-size: 120px;
    font-weight: 400;
    color: #e5890a;
    text-align: center;
    margin: 60px 0 20px;
  }
  .tips-hero h3 {
    font-size: 18px;
    text-align: center;
  }
  .tip-numero {
    font-size: 24px;
  }
  .tip-titulo h2 {
    font-size: 16px;
  }
  .contacto-banner img {
    height: 120px;
  }
}